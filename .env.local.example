# Local Development Environment
NODE_ENV=development

# API Gateway
PORT=3000
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# JWT Configuration
JWT_SECRET=local-dev-secret-DO-NOT-USE-IN-PROD
JWT_EXPIRES_IN=24h

# Database (Local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=infracost_analyzer

# Redis (Local)
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS Credentials (for pricing API)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Infracost
INFRACOST_API_KEY=your_infracost_api_key

# Service URLs (Local)
AUTH_SERVICE_URL=http://localhost:3002
TERRAFORM_COST_SERVICE_URL=http://localhost:8000
AWS_PRICING_SERVICE_URL=http://localhost:3003
REPORTS_SERVICE_URL=http://localhost:3004

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Logging
LOG_LEVEL=debug