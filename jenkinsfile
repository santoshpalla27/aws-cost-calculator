pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/santoshpalla27/aws-cost-calculator.git'
                }
            }
        }

        stage('Prepare ENV') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'app-env-file', variable: 'ENVFILE')]) {
                        sh """
                            echo 'ðŸ“Œ Preparing environment variables...'
                            cp $ENVFILE .env
                            echo '.env copied successfully'
                        """
                    }
                }
            }
        }

        stage('down') {
            steps {
                script {
                    sh "docker compose down || true"
                }
            }
        }

        stage('clean') {
            steps {
                script {
                    sh """
                        docker builder prune -a -f
                        docker volume prune -f
                        docker container prune -f
                        docker image prune -a -f
                    """
                }
            }
        }

        stage('build') {
            steps {
                script {
                    sh "docker compose build --no-cache"
                }
            }
        }

        stage('deploy') {
            steps {
                script {
                    sh "docker compose up -d"
                }
            }
        }

        stage('test Connection') {
            steps {
                script {
                    sh "docker compose ps"
                }
            }
        }
    }
}
